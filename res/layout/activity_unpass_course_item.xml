<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
    android:orientation="vertical"
    android:background="#FFFFFFFF">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/course_name"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/course_name_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/course_num"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
			android:id="@+id/unpass_course_item_tv_num"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/course_num_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/overall_score"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_score"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/overall_score_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:text="@string/credit"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_credit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/credit_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/course_index"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_index"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/course_index_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:text="@string/credit_point"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_credit_point"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/credit_point_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/semester"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_semester"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/semester_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:text="@string/select_type"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_select_type"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/select_type_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="15dp"
			android:paddingRight="5dp"
			android:text="@string/remarks"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_remarks"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/remarks_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="10dp"
			android:paddingRight="5dp"
			android:text="@string/exam_type"
			android:textSize="16sp"
			android:textColor="#FF555555"
			android:gravity="left" />
	
		<TextView
		    android:id="@+id/unpass_course_item_tv_exam_type"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		    android:paddingLeft="5dp"
		    android:paddingRight="10dp"
		    android:text="@string/exam_type_content"
		    android:textColor="#FF000000"
		    android:textSize="16sp"
		    android:gravity="left" />
	
	</LinearLayout>

</LinearLayout>
