<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/one_key_item_tv_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_person_grey600_18dp"
        android:drawableLeft="@drawable/ic_person_grey600_18dp"
        android:drawablePadding="22dp"
        android:text="@string/name_content_test"
        android:textSize="14sp"
        android:gravity="start|center_vertical" />

    <TextView
        android:id="@+id/one_key_item_tv_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_class_grey600_18dp"
        android:drawableLeft="@drawable/ic_class_grey600_18dp"
        android:drawablePadding="22dp"
        android:text="@string/course_sample"
        android:textSize="14sp"
        android:gravity="start|center_vertical" />

    <TextView
        android:id="@+id/one_key_item_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_grade_black_24dp"
        android:drawableLeft="@drawable/ic_grade_black_24dp"
        android:drawablePadding="16dp"
        android:text="@string/test_text"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="24sp" />

</LinearLayout>
