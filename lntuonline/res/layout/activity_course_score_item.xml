<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/course_score_item_icon_very_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/icon_very_good"
        android:contentDescription="@string/course" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_score_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_name_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/course_score_item_tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_num_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="@string/overall_score"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/overall_score_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/credit"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/credit_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="@string/course_index"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/course_index_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/select_type"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_select_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/select_type_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="@string/semester"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_semester"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/semester_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/test_mode"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_test_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/test_mode_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="@string/remarks"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/remarks_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/exam_type"
                android:textSize="14sp"
                android:textColor="#FF555555"
                android:gravity="left" />

            <TextView
                android:id="@+id/course_score_item_tv_exam_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="@string/exam_type_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:gravity="left" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
