<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ActionBar -->
    <FrameLayout style="@style/BlueFlor.ActionBar">

        <TextView style="@style/BlueFlor.ActionBar.BtnLeft"
            android:onClick="onActionBarBtnLeft" />

        <TextView style="@style/BlueFlor.ActionBar.Title"
            android:id="@+id/actionbar_title"
            android:text="@string/curriculum" />

        <TextView style="@style/BlueFlor.ActionBar.Icon"
            android:drawableRight="@drawable/action_bar_icon_refresh"
            android:layout_gravity="right"
            android:onClick="onActionBarIconRefresh" />

    </FrameLayout><!-- End With ActionBar -->

    <android.support.v4.view.ViewPager 
        android:id="@+id/curriculum_vp_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <android.support.v4.view.PagerTabStrip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#FFFFFFFF"
            android:background="#FF17ACAE" />

    </android.support.v4.view.ViewPager>

</LinearLayout>
