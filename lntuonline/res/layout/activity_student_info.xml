<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ActionBar -->
    <FrameLayout style="@style/BlueFlor.ActionBar">

        <TextView style="@style/BlueFlor.ActionBarIcon"
            android:drawableLeft="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_gravity="left"
            android:onClick="onActionBarBtnLeft" />

        <TextView style="@style/BlueFlor.ActionBarTitle"
            android:text="@string/student_info" />

    </FrameLayout><!-- End With ActionBar -->

    <ListView
        android:id="@+id/student_info_lv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/container_background" />

</LinearLayout>
