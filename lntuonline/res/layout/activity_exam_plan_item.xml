<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/exam_plan_item_layout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/exam_plan_item_layout_end"
        android:layout_toLeftOf="@+id/exam_plan_item_layout_end"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exam_plan_item_tv_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_sample"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="16sp"
            android:gravity="start|center_vertical" />

        <TextView
            android:id="@+id/exam_plan_item_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_schedule_grey600_18dp"
            android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
            android:drawablePadding="16dp"
            android:text="@string/date_sample"
            android:textSize="14sp"
            android:gravity="start|center_vertical" />

        <TextView
            android:id="@+id/exam_plan_item_tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_location_on_grey600_18dp"
            android:drawableLeft="@drawable/ic_location_on_grey600_18dp"
            android:drawablePadding="16dp"
            android:text="@string/location_sample"
            android:textSize="14sp"
            android:gravity="start|center_vertical" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/exam_plan_item_layout_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/exam_plan_item_layout_start"
        android:layout_alignBottom="@+id/exam_plan_item_layout_start"
        android:padding="4dp">

        <ImageView
            android:id="@+id/exam_plan_item_icon_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:src="@drawable/icon_exam_finish"
            android:scaleType="fitCenter"
            android:contentDescription="@string/exam_plan"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/exam_plan_item_icon_countdown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:orientation="horizontal"
            android:gravity="bottom|end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/have_left"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/exam_plan_item_tv_day_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/_100"
                    android:textColor="#FF0000"
                    android:textSize="34sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="@string/day"
                android:textSize="14sp"
                android:gravity="bottom" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
