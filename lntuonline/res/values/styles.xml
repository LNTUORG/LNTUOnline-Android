<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>




    <!-- Blue Flor Theme -->
    <style name="BlueFlor" parent="AppTheme">
    </style>

    <style name="BlueFlor.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@drawable/action_bar_backgroud</item>
    </style>

    <style name="BlueFlor.ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/title</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="BlueFlor.ActionBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/action_bar_icon_padding</item>
        <item name="android:background">@drawable/action_bar_btn_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BlueFlor.ActionBarBtnText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/action_bar_btn_padding_outside</item>
        <item name="android:paddingRight">@dimen/action_bar_btn_padding_outside</item>
        <item name="android:text">@string/menu</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/action_bar_btn_text_size</item>
        <item name="android:background">@drawable/action_bar_btn_background</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- SlidingMenu -->
    <style name="BlueFlor.SlidingMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#AA000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sliding_menu_button</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
