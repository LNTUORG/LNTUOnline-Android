<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:background="@color/color_primary"
                android:elevation="4dp" />

            <LinearLayout
                android:id="@+id/about_btn_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/rect_btn_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version_check_update"
                    android:textColor="@color/text_color_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/about_tv_version_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/version_name_content"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <View style="@style/AppTheme.DeepLine"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <LinearLayout
                android:id="@+id/about_btn_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/rect_btn_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/official_homepage"
                    android:textColor="@color/text_color_primary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/official_homepage_content"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <View style="@style/AppTheme.DeepLine"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/about_btn_term_of_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:text="@string/term_of_service"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                android:background="@drawable/rect_btn_background" />

            <View style="@style/AppTheme.DeepLine"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/about_btn_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:text="@string/faq"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                android:background="@drawable/rect_btn_background" />

            <View style="@style/AppTheme.DeepLine"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/about_btn_open_source_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:text="@string/open_source_license"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                android:background="@drawable/rect_btn_background" />

            <View style="@style/AppTheme.DeepLine"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01ffffff"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

</FrameLayout>
