<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:elevation="@dimen/app_bar_elevation"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:title="@string/class_table_course_info"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        tools:text="高等数学" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_class_grey600_18dp"
                        android:drawableLeft="@drawable/ic_class_grey600_18dp"
                        android:drawablePadding="16dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        tools:text="H06849214A" />

                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_person_grey600_18dp"
                        android:drawableLeft="@drawable/ic_person_grey600_18dp"
                        android:drawablePadding="16dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        tools:text="张三" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="16dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        tools:text="2015年 春季学期" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_type_"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_select_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="必修" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_mode_"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_test_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="考试" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exam_type_"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_exam_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="正常考试" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="32dp"
                        android:text="@string/times_and_places_"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_times_and_places"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.5"
                        tools:text="1-18 周三 第一大节 尔雅楼315\n1-18 周三 第一大节 尔雅楼315\n1-18 周三 第一大节 尔雅楼315" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/score_level_great"
                        android:textSize="40sp"
                        tools:text="6.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:text="@string/credit"
                        android:textColor="@color/red_light"
                        android:textSize="20sp" />

                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
