<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_action_bar" />

    <TextView
        android:id="@+id/grades_tv_ava_of_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <Spinner
                android:id="@+id/grades_spn_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/years_test"
                android:gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <Spinner
                android:id="@+id/grades_spn_term"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/terms"
                android:gravity="center" />

        </FrameLayout>

        <Button
            android:id="@+id/grades_btn_query"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="@string/query"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_image" />

    </LinearLayout>

    <TextView
        android:id="@+id/grades_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/nothing"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#009688" />

    <ListView
        android:id="@+id/grades_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
