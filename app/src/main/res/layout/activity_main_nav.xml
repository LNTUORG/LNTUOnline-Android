<?xml version="1.0" encoding="utf-8"?>
<org.lntu.online.ui.widget.ScrimInsetsScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:scrollbars="none"
    app:appInsetForeground="#44000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/nav_layout_info"
                android:layout_marginEnd="-16dp"
                android:layout_marginRight="-16dp"
                android:src="@drawable/main_nav_header_bg_image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:clickable="true" />

            <View
                android:id="@+id/nav_adapt_status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/nav_layout_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nav_adapt_status_bar"
                android:padding="16dp"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/nav_img_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/image_placeholder"
                    android:scaleType="fitCenter"
                    app:siBorderWidth="2dp"
                    app:siBorderColor="@android:color/white" />

                <TextView
                    android:id="@+id/nav_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    tools:text="张三" />

                <TextView
                    android:id="@+id/nav_tv_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color_light"
                    android:textSize="13sp"
                    tools:text="电子与信息工程学院" />

                <TextView
                    android:id="@+id/nav_tv_class_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color_light"
                    android:textSize="13sp"
                    tools:text="计算10-1" />

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/AppWidget.ItemGap" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_lntu_online_by_browser"
            android:drawableStart="@drawable/ic_open_in_browser_grey600_24dp"
            android:drawableLeft="@drawable/ic_open_in_browser_grey600_24dp"
            android:text="@string/lntuonline_by_browser" />

        <View style="@style/AppWidget.NavigationItemDeepLineGap" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_open_in_play"
            android:drawableStart="@drawable/ic_grade_grey600_24dp"
            android:drawableLeft="@drawable/ic_grade_grey600_24dp"
            android:text="@string/grade_in_play" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_share"
            android:drawableStart="@drawable/ic_share_grey600_24dp"
            android:drawableLeft="@drawable/ic_share_grey600_24dp"
            android:text="@string/share_to_friends" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_feedback"
            android:drawableStart="@drawable/ic_comment_grey600_24dp"
            android:drawableLeft="@drawable/ic_comment_grey600_24dp"
            android:text="@string/feedback" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_about"
            android:drawableStart="@drawable/ic_info_grey600_24dp"
            android:drawableLeft="@drawable/ic_info_grey600_24dp"
            android:text="@string/about" />

        <View style="@style/AppWidget.NavigationItemDeepLineGap" />

        <TextView style="@style/AppWidget.NavigationItem"
            android:id="@+id/nav_btn_logout"
            android:drawableStart="@drawable/ic_exit_to_app_grey600_24dp"
            android:drawableLeft="@drawable/ic_exit_to_app_grey600_24dp"
            android:text="@string/logout" />

        <View style="@style/AppWidget.ItemGap" />

    </LinearLayout>

</org.lntu.online.ui.widget.ScrimInsetsScrollView>
