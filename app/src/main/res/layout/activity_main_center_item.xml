<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/colorPrimary"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleAlpha="0.2">

    <LinearLayout
        android:id="@+id/main_center_item_btn_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/rect_btn_background">

        <ImageView
            android:id="@+id/main_center_item_img_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon_profle"
            android:scaleType="fitCenter"
            android:contentDescription="@string/test_icon" />

        <TextView
            android:id="@+id/main_center_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/test_title"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center" />

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>