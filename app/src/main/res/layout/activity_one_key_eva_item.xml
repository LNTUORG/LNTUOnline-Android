<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/one_key_eva_item_tv_state"
            android:layout_toLeftOf="@+id/one_key_eva_item_tv_state"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/one_key_eva_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                tools:text="概率论与数理统计" />

            <TextView
                android:id="@+id/one_key_eva_item_tv_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_class_grey600_18dp"
                android:drawableLeft="@drawable/ic_class_grey600_18dp"
                android:drawablePadding="16dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                tools:text="H06849214A" />

            <TextView
                android:id="@+id/one_key_eva_item_tv_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_person_grey600_18dp"
                android:drawableLeft="@drawable/ic_person_grey600_18dp"
                android:drawablePadding="16dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:gravity="center_vertical"
                tools:text="张三" />

        </LinearLayout>

        <TextView
            android:id="@+id/one_key_eva_item_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:textColor="@color/score_level_normal"
            android:textSize="18sp"
            tools:text="已评估" />

    </RelativeLayout>

    <View style="@style/AppWidget.DeepLine" />

</LinearLayout>
