<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_stage_1"
            android:layout_alignBottom="@+id/layout_stage_2"
            android:src="@drawable/class_table_bg_morning"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_stage_3"
            android:layout_alignBottom="@+id/layout_stage_4"
            android:src="@drawable/class_table_bg_afternoon"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_stage_5"
            android:layout_alignBottom="@+id/layout_stage_5"
            android:src="@drawable/class_table_bg_night"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/layout_stage_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#88ffffff">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stage_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="#88ffffff"
                        tools:text="第一大节（08:00-08:45  08:50-09:35）" />

                    <ImageView
                        android:id="@+id/btn_stage_1"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_draw_down"
                        android:scaleType="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gap_shadow" />

                <LinearLayout
                    android:id="@+id/icon_stage_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/this_stage_no_course"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <View style="@style/AppWidget.DeepLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_stage_1_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout_stage_1_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_stage_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_stage_1"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#88ffffff">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stage_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="#88ffffff"
                        tools:text="第二大节（08:00-08:45  08:50-09:35）" />

                    <ImageView
                        android:id="@+id/btn_stage_2"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_draw_down"
                        android:scaleType="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gap_shadow" />

                <LinearLayout
                    android:id="@+id/icon_stage_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/this_stage_no_course"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <View style="@style/AppWidget.DeepLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_stage_2_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout_stage_2_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_stage_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_stage_2"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#88ffffff">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stage_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="#88ffffff"
                        tools:text="第三大节（08:00-08:45  08:50-09:35）" />

                    <ImageView
                        android:id="@+id/btn_stage_3"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_draw_down"
                        android:scaleType="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gap_shadow" />

                <LinearLayout
                    android:id="@+id/icon_stage_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/this_stage_no_course"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <View style="@style/AppWidget.DeepLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_stage_3_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout_stage_3_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_stage_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_stage_3"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#88ffffff">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stage_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="#88ffffff"
                        tools:text="第四大节（08:00-08:45  08:50-09:35）" />

                    <ImageView
                        android:id="@+id/btn_stage_4"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_draw_down"
                        android:scaleType="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gap_shadow" />

                <LinearLayout
                    android:id="@+id/icon_stage_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/this_stage_no_course"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <View style="@style/AppWidget.DeepLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_stage_4_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout_stage_4_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_stage_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_stage_4"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#88ffffff">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stage_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:drawableStart="@drawable/ic_schedule_grey600_18dp"
                        android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="#88ffffff"
                        tools:text="晚自习（08:00-08:45  08:50-09:35）" />

                    <ImageView
                        android:id="@+id/btn_stage_5"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_draw_down"
                        android:scaleType="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gap_shadow" />

                <LinearLayout
                    android:id="@+id/icon_stage_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/this_stage_no_course"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <View style="@style/AppWidget.DeepLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_stage_5_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout_stage_5_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gap_shadow" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>