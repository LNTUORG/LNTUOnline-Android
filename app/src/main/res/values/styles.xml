<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App Theme -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FitsStatusBar" />

    <style name="AppTheme.Launch" />

    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- App Theme Dialog -->
    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- AppWidget -->
    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->
    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/list_divider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->
    <style name="AppWidget.ItemGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <!-- Navigation -->
    <style name="AppWidget.NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:textColor">@color/main_nav_item_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundGeneral</item>
    </style>

    <style name="AppWidget.NavigationItemBadger">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppWidget.NavigationItemDeepLineGap" parent="AppWidget.DeepLine">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Button -->
    <style name="AppWidget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_image</item>
    </style>

    <!-- ClassTable -->
    <style name="AppTheme.ClassTable">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:spinnerItemStyle">@style/AppStyle_SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppStyle_SpinnerDropDownItemStyle</item>
    </style>

    <style name="AppStyle_SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppStyle_SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">?attr/selectableItemBackgroundGeneral</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- ClassTableSpinner -->
    <style name="AppWidget.ClassTableSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>

</resources>
